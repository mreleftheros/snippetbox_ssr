{{define "title"}}New Snippet{{ end }}

{{define "main"}}
<h1>New Snippet</h1>
<form action="/snippets/new" method="POST" autocomplete="off">
  <div>
    <label for="title">Title:</label>
    <input
      type="text"
      name="title"
      id="title"
      placeholder="Enter title"
      {{if
      .SnippetForm}}value="{{.SnippetForm.Title}}"
      {{end}}
      required
    />
    <p class="error">
      {{if .SnippetErrors}}{{.SnippetErrors.titleError}}{{ end }}
    </p>
  </div>
  <div>
    <label for="content">Content:</label>
    <input
      type="text"
      name="content"
      id="content"
      placeholder="Enter content"
      {{if
      .SnippetForm}}value="{{.SnippetForm.Content}}"
      {{end}}
      required
    />
    <p class="error">
      {{if .SnippetErrors}}{{.SnippetErrors.contentError}}{{ end }}
    </p>
  </div>
  <div>
    <label for="expires">Expires in:</label>
    <input
      type="number"
      name="expires"
      id="expires"
      {{if
      .SnippetForm}}value="{{.SnippetForm.Expires}}"
      {{end}}
      required
    />
    <p class="error">
      {{if .SnippetErrors}}{{.SnippetErrors.expiresError}}{{ end }}
    </p>
  </div>
  <input type="submit" value="Create Snippet" />
</form>
{{ end }}
